# hello world page
GET / server.app.controllers.HelloWorld.show()


# Get recipe list given a list of tags
# REQUIRED: POST parameter 'tags' (comma separated list of tags)
# EXAMPLE:  tags = Indian,Chicken
#           will find all recipes that contain BOTH of the above tags
POST /getRecipesByTag server.app.controllers.Recipes.getRecipesByTag()

# Search recipe titles
# REQUIRED: { title: <title_text> }
POST /searchRecipeTitles server.app.controllers.Recipes.searchRecipeTitles()
