# hello world page
GET / server.app.controllers.HelloWorld.show()


# Get recipe list given a list of tags
# REQUIRED: GET parameter 'recipe_tags' (comma separated list of tags)
# EXAMPLE:  tags = Indian,Chicken
#           will find all recipes that contain BOTH of the above tags
GET /recipe/tags/:recipe_tags      server.app.controllers.Recipes.getRecipesByTag(recipe_tags: String)

# Search recipe titles
# REQUIRED: { title: <recipe_title> }
GET /recipe/search/:recipe_title    server.app.controllers.Recipes.searchRecipeTitles(recipe_title: String)

# Get recipe by id
# REQUIRED: { id: <recipe_id> }
GET /recipe/id/:recipe_id           server.app.controllers.Recipes.getRecipeById(recipe_id: String)
